    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "dev",
                "LC_ALL":"C.UTF-8", 
                "LANG":"C.UTF-8"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "-h0.0.0.0",
                "-p 5001"
            ],
            "jinja": true
        }
    ]
}